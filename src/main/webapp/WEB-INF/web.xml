<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<!-- <context-param> -->
	<!-- <param-name>bufferSize</param-name> -->
	<!-- <param-value>1048576</param-value> -->
	<!-- </context-param> -->
	<servlet>
		<servlet-name>init</servlet-name>
		<servlet-class>com.tmall.top.push.websocket.InitServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
		<init-param>
			<param-name>maxConnectionCount</param-name>
			<param-value>100000</param-value>
		</init-param>
		<init-param>
			<param-name>maxMessageSize</param-name>
			<param-value>1024</param-value>
		</init-param>
		<init-param>
			<param-name>maxMessageBufferCount</param-name>
			<param-value>200000</param-value>
		</init-param>
		<init-param>
			<param-name>senderCount</param-name>
			<param-value>4</param-value>
		</init-param>
		<init-param>
			<param-name>senderIdle</param-name>
			<param-value>1000</param-value>
		</init-param>
		<init-param>
			<param-name>stateBuilderIdle</param-name>
			<param-value>1000</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>frontend</servlet-name>
		<servlet-class>com.tmall.top.push.websocket.FrontendServlet</servlet-class>
		<init-param>
			<param-name>maxTextMessageSize</param-name>
			<param-value>1048576</param-value>
		</init-param>
		<init-param>
			<param-name>maxBinaryMessageSize</param-name>
			<param-value>1048576</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>backend</servlet-name>
		<servlet-class>com.tmall.top.push.websocket.BackendServlet</servlet-class>
		<init-param>
			<param-name>maxTextMessageSize</param-name>
			<param-value>1048576</param-value>
		</init-param>
		<init-param>
			<param-name>maxBinaryMessageSize</param-name>
			<param-value>1048576</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>frontend</servlet-name>
		<url-pattern>/frontend</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>backend</servlet-name>
		<url-pattern>/backend</url-pattern>
	</servlet-mapping>
</web-app>